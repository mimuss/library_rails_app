<%= form_with model: @library, local: true do |form| %>
 
  <%= render 'layouts/form_error', value: @library %>
 
  <div class='form-group'>
    <%= form.label :name, "Название" %><br>
    <%= form.text_field :name, class: "form-control" %>
  </div>
 
  <div class='form-group'>
    <%= form.label :number, "Номер" %><br>
    <%= form.text_field :number, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :address, "Адрес" %><br>
    <%= form.text_field:address, class: "form-control" %>
  </div>
 
  <div class="form-group">
    <%= form.label :description, "Описание" %><br>
    <%= form.text_area :description, class: "form-control", rows: 5 %>
  </div>
 

  <div class="form-group">
    <%= form.submit "Потвердить", class: "btn btn-primary" %>
  </div>
 
<% end %>