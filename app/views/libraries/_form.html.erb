<%= form_with model: @library, local: true do |form| %>
 
  <%= render 'layouts/form_error', value: @library %>
 
  <div class='form-group row'>
    <%= form.label :name, "Название", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-5">
      <%= form.text_field :name, class: "form-control" %>
    </div>
  </div>
 
  <div class='form-group row'>
    <%= form.label :number, "Номер", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-5">
      <%= form.text_field :number, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :address, "Адрес", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-5">
      <%= form.text_field :address, class: "form-control" %>
    </div>
  </div>
 
  <div class="form-group row">
    <%= form.label :description, "Описание", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-5">
      <%= form.text_area :description, class: "form-control", rows: 5 %>
    </div>
  </div>
 

  <div class="form-group row">
    <div class="offset-sm-2 col-sm-2">
      <%= form.submit "Подтвердить", class: "btn btn-primary" %>
    </div>
  </div>
 
<% end %>