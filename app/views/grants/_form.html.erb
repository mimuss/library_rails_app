<%= form_with model: @grant, local: true do |form| %>
 
  <%= render 'formerror' %>
 
  <div class="form-group">
    <%= form.label :date, "Дата выдачи" %><br>
    <%= form.date_field :date, class: "form-control", max: Date.today %>
  </div>
 
 <div class="form-group">
  <%= form.collection_select(:book_id, @books, :id, :name, {prompt: "Выберите книгу"}, {class: "form-control"} ) %>
 </div>

 <div class="form-group">
 	<%= form.collection_select(:subscriber_id, @subscribers, :id, :name, {prompt: "Выберите абонента"}, {class: "form-control"} )%>
  </div>
  <div class="form-group">
    <%= form.submit "Потвердить", class: "btn btn-primary" %>
  </div>
 
<% end %>