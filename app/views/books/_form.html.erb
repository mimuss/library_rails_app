<% if defined?(@library) %>
  <%= form_for @book, url: library_books_path(@library), local: true do |form| %>

    <%= render 'layouts/form_error', value: @book %>

    <%= render 'form_elements', form: form %>

    <div class="form-group row">
      <div class="offset-sm-2 col-sm-2">
        <%= form.submit "Потвердить", :class => "btn btn-primary" %>
      </div>
    </div>

  <% end %>
<% else %>

  <%= form_for @book, url: books_path, local: true do |form| %>
    <%= render 'layouts/form_error', value: @book %>

    <%= render 'form_elements', form: form %>

    <div class="form-group row">
      <label class="col-sm-2 col-form-label" for="book_library_id">Библиотека</label>
      <div class="col-sm-5">
        <%= form.collection_select(:library_id, Library.all, :id, :name, {prompt: "Выберите библиотеку"}, {class: "form-control"} ) %>
      </div>
    </div>

    <div class="form-group row">
      <div class="offset-sm-2 col-sm-2">
        <%= form.submit "Потвердить", :class => "btn btn-primary" %>
      </div>
    </div>
  <% end %>
<% end %>