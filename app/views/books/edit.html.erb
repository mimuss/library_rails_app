<h1>Редакитировать книгу</h1>

<%= form_for @book, url: library_book_path(@library, @book), local: true do |form| %> 

<% if @book.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@book.errors.count, "error") %> prohibited
        this book from being saved:
      </h2>
      <ul>
        <% @book.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="form-group">
    <%= form.label :name, "Имя" %><br>
    <%= form.text_field :name, :class => "form-control" %>
  </div>
 

  <div class="form-group">
    <%= form.label :cipher, "Код" %><br>
    <%= form.text_field :cipher, :class => "form-control" %>
  </div>

<div class="form-group">
  <%= form.collection_select(:library_id, @libraries, :id, :name,
   {prompt: "Выберите библиотеку"}, {class: "form-control"}) %>
</div>
  <div class="form-group">
    <%= form.submit "Потвердить", :class => "btn btn-primary" %>
  </div>

 
 
<% end %>