<div class="my-4">
	<h1>Редактировать</h1>
</div>


<%= form_for @employee, url: library_employee_path(@library, @employee), local: true do |form| %> 

<%= render 'layouts/form_error', value: @employee %>

 <%= render 'form_elements', form: form %>
 

  <div class="form-group row">
  	<label for="employee_library_id" class="col-sm-2 col-form-label">Библиотека</label>
  	<div class="col-sm-5">
  		<%= form.collection_select(:library_id, @libraries, :id, 
  		:name, {prompt: "Выберите библиотеку"}, {class: "form-control"} ) %>
  	</div>
     
  </div>
   

<div class="form-group row">
	<div class="col-sm-2 offset-sm-2">
		<%= form.submit "Потвердить", class: "btn btn-primary" %>
	</div>
    
  </div>
 
 
<% end %>